# CSM Voice Assistant Configuration

# Required environment variable to prevent torch compile issues
NO_TORCH_COMPILE=1

# Application settings
PORT=5000
HOST=127.0.0.1
DEBUG=True

# Voice settings 
# Speaker ID (0-7) - Different voice characteristics
SPEAKER_ID=0 

# Max audio length in milliseconds
# Lower values may reduce memory usage but might break longer sentences
# Higher values give more natural speech but use more GPU memory
MAX_AUDIO_LENGTH=10000

# Chunk size for splitting responses (characters)
# Lower values give faster initial response but more chunking
# Higher values give more natural speech but increase initial delay
CHUNK_SIZE=80

# OpenAI Integration
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Azure OpenAI Integration
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2023-05-15

# Anthropic Integration
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-2
ANTHROPIC_MAX_TOKENS=150
ANTHROPIC_TEMPERATURE=0.7

# Speech-to-Text Configuration
# OpenAI Whisper API
# Uses OPENAI_API_KEY from above
WHISPER_MODEL=whisper-1

# Azure Speech Service
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=westus
AZURE_SPEECH_LANGUAGE=en-US

# Local Whisper Model
USE_LOCAL_WHISPER=False
LOCAL_WHISPER_MODEL=base  # Options: tiny, base, small, medium, large

# Conversation Memory
CONVERSATION_MEMORY_TYPE=in_memory  # Options: in_memory, sqlite
CONVERSATION_MAX_HISTORY=50
CONVERSATION_DB_PATH=conversations.db

# User Authentication
JWT_SECRET=your_jwt_secret_here  # Generate with: openssl rand -hex 32
JWT_EXPIRATION=86400  # 24 hours in seconds
AUTH_DB_PATH=users.db

# Knowledge Base
KNOWLEDGE_BASE_TYPE=sqlite  # Options: sqlite, web_api
KNOWLEDGE_BASE_DB_PATH=knowledge.db
KNOWLEDGE_BASE_API_URL=https://your-kb-api-url.com
KNOWLEDGE_BASE_API_KEY=your_kb_api_key_here

# Multi-modal Input
# OpenAI Vision API
# Uses OPENAI_API_KEY from above
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_VISION_MAX_TOKENS=300

# Azure Computer Vision
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/

# Local Vision Model
USE_LOCAL_VISION=False

# Analytics and Usage Tracking
ANALYTICS_TRACKER_TYPE=sqlite  # Options: sqlite, web_api
ANALYTICS_DB_PATH=analytics.db
ANALYTICS_API_URL=https://your-analytics-api-url.com
ANALYTICS_API_KEY=your_analytics_api_key_here

# Docker Configuration
# These are used by docker-compose.yml
POSTGRES_USER=csm
POSTGRES_PASSWORD=csm_password
POSTGRES_DB=csm_db
REDIS_PASSWORD=redis_password
